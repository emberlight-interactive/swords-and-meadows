{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "noEmit": false,
    "importHelpers": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    },
    "outDir": "./dist/client",
    "types": [
      "phaser",
      "jest",
    ],
    "lib": [ "es2015", "dom" ]
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ]
}
