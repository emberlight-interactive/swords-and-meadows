{
  "hosting": {
    "public": "dist-website",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/pushSubscription",
        "function": "pushSubscription"
      },
      {
        "source": "/notifyPlzLol",
        "function": "notifyPlzLol"
      },
      {
        "source": "/hello",
        "function": "hello"
      },
      {
        "source": "**",
        "destination": "/landing.html"
      }
    ]
  },
  "functions": [
    {
      "source": "src/functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ]
}
